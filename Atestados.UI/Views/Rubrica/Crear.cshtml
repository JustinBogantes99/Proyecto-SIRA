@model Atestados.Objetos.Dtos.RubricaDTO

@{
    ViewBag.Title = "Crear";
    Layout = "~/Views/Shared/_LayoutFuncionario.cshtml";
}

@using Atestados.Negocios.Negocios;
@using Atestados.Objetos.Dtos;

<div class="container-fluid">
    @RenderPage("~/Views/Shared/BotonRegresar.cshtml")
    <div class="mt-4">
        <h2>Gestionar Rúbricas</h2>
        <hr />
    </div>
    <div class="row">
        <div class="col-lg-6">
            <div class="container">
                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()

                <div class="form-horizontal">
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                    <div class="form-group pt-2">
                        @Html.LabelFor(model => model.Nombre, htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.Nombre, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.Nombre, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group pt-2">
                        @Html.LabelFor(model => model.Rubro, "Atestado", htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.DropDownList("RubroID", null, htmlAttributes: new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.AtestadoID, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="mt-4">
                        <h2>Añadir Criterios de Evaluación</h2>
                        <hr />
                    </div>

                    <div class="row pt-4">
                        <div class="form-group pt-1">
                            <div class="col-md-12">
                                <input type="submit" class="btn btn-primary" value="Agregar Criterio" form="nuevoCriterio" data-bs-toggle="modal" data-bs-target="#modalRubrica"/>
                            </div>
                        </div>

                        <div class="form-group pt-1">
                            <div class="col-md-10">
                                <input type="submit" class="btn btn-primary" value="Agregar Criterio Múltiple" form="subirArchivo" data-bs-toggle="modal" data-bs-target="#modalRubricaMultiple"/>
                            </div>
                        </div>
                    </div>

                    @Html.Partial("_CriteriosRubrica")

                    <div class="form-group my-2">
                        <div class="col-md-offset-2 col-md-10">
                            <input type="submit" value="Crear" class="btn btn-success" id="submit" />
                        </div>
                    </div>

                </div>
                }

            </div>
    </div>
</div>

@*Modal de rubrica.*@
<div id="modalRubrica" class="modal fade" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
    <div class="modal-dialog modal-xl">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title" id="staticBackdropLabel">Agregar Criterio</h4>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                @Html.Partial("_CriteriosRubrica")
                <h3>Nuevo Criterio</h3>
                <table class="table">
                    <tr>
                        <td>
                            <div class="form-group pt-2">
                                @Html.LabelFor(model => model.CriterioNombre, htmlAttributes: new { @class = "control-label col-md-2" })
                                <div class="col-md-10">
                                    @Html.EditorFor(model => model.CriterioNombre, new { htmlAttributes = new { placeholder = "Nombre del Criterio", @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.CriterioNombre, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <div class="form-group pt-2">
                                @Html.LabelFor(model => model.CriterioPuntaje, htmlAttributes: new { @class = "control-label col-md-2" })
                                <div class="col-md-10">
                                    @Html.EditorFor(model => model.CriterioPuntaje, new { htmlAttributes = new { placeholder = "Puntaje", @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.CriterioPuntaje, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <div class="form-group pt-2">
                                <button type="button" class="btn btn-primary">Agregar</button>

                            </div>
                        </td>
                    </tr>
                </table>
            </div>
        </div>
    </div>
</div>

@*Modal de rubrica Multiple.*@
<div id="modalRubricaMultiple" class="modal fade" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
    <div class="modal-dialog modal-xl">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title" id="staticBackdropLabel">Agregar Criterio Múltiple</h4>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                @Html.Partial("_CriteriosRubrica")
                <h3>Nuevo Criterio Múltiple</h3>
                <table class="table">
                    <tr>
                        <td>
                            <div class="form-group pt-2">
                                @Html.LabelFor(model => model.CriterioNombre, htmlAttributes: new { @class = "control-label col-md-2" })
                                <div class="col-md-10">
                                    @Html.EditorFor(model => model.CriterioNombre, new { htmlAttributes = new { placeholder = "Nombre del Criterio", @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.CriterioNombre, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <div class="form-group pt-2">
                                @Html.LabelFor(model => model.Nombre, htmlAttributes: new { @class = "control-label col-md-2" })
                                <div class="col-md-10">
                                    @Html.EditorFor(model => model.CriterioNombre, new { htmlAttributes = new { placeholder = "Nombre de la columna", @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.CriterioNombre, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <div class="form-group pt-2">
                                @Html.LabelFor(model => model.CriterioPuntaje, htmlAttributes: new { @class = "control-label col-md-2" })
                                <div class="col-md-10">
                                    @Html.EditorFor(model => model.CriterioPuntaje, new { htmlAttributes = new { placeholder = "valor de columna", @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.CriterioPuntaje, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <div class="form-group pt-2">
                                <button type="button" class="btn btn-primary">Agregar</button>

                            </div>
                        </td>
                    </tr>
                </table>
            </div>
        </div>
    </div>
</div>

<script type="text/javascript" src="https://ajax.googleapis.com/ajax/libs/jquery/1.8.3/jquery.min.js"></script>
<script type="text/javascript">
    @{InformacionGeneral infoGeneral = new InformacionGeneral();}
    // Esta variable debe estar en todas las vistas de atestados.
    var baseUrl = "@Variables.BaseUrl/Atestados";
    var editMode = false;
    var hasAutores = true;
</script>
@Scripts.Render("~/bundles/atestados_shared")
